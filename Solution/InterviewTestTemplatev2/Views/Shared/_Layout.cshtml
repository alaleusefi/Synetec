<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel='stylesheet' href="/styles/FrontEnd.css" type='text/css' />
    <!--[if lt IE 11]> <script src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js'></script> <![endif]-->
</head>
<body>
    <div class="side-bar nav navbar-nav">
        <div class="logo">
            <img src="~/Public/logo.png" />
        </div>
        <div class="navbar-header">

            @Html.ActionLink("Bonus Pool Calculator", "Index", "BonusPool", new { area = "" }, new { @class = "navbar-brand" })

        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Ally.yousefi@gmail.com</p>
        </footer>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
